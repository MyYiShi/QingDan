<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/praise_item">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/praisemore_item_image"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        fresco:placeholderImage = "@drawable/loading_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:fadeDuration = "1000"
        fresco:roundedCornerRadius="10dp"/>

    <TextView
        android:id="@+id/praisemore_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是标题"
        android:textSize="22dp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/praisemore_item_title"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/praise_item_thingcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评数"
            android:textSize="12dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/praise_item_reviewcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

</RelativeLayout>