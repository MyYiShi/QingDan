<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/subview_title"
                ></include>

            <android.support.v4.view.ViewPager
                android:id="@+id/things_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="500dp">
            </android.support.v4.view.ViewPager>


            <LinearLayout
                android:id="@+id/up_viewpager_indicator"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:gravity="center">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="25dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deonatulle"
                        android:textSize="15dp"
                        android:id="@+id/things_detail_text1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="soft stone 腋下止汗膏"
                        android:textSize="30dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/things_detail_text2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp">
                    <RatingBar
                        style="@style/fiveStarRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:id="@+id/things_detail_ratingbar"
                        android:isIndicator="true"
                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deonatulle"
                        android:textSize="15dp"
                        android:id="@+id/things_detail_text3" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/things_detail_description">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品描述"
                        android:textSize="15dp"/>
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/angle_right_grey"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <RelativeLayout
                    android:id="@+id/things_detail_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买渠道"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/things_detail_buy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥62"
                        android:textSize="15dp"
                        android:layout_alignLeft="@+id/things_detail_buy_image"
                        android:layout_marginLeft="-50dp"/>
                    <ImageView
                        android:id="@+id/things_detail_buy_image"
                        android:layout_marginLeft="18dp"
                        android:layout_width="6dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/angle_right_grey"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/layout_like_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heart_grey_sm"
                        />
                    <TextView
                        android:id="@+id/textView_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜欢(0)"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_comments_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heart_grey_sm"
                        />
                    <TextView
                        android:id="@+id/textView_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论(0)"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/light_gray"/>

            <include layout="@layout/subview_comments"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/bottom_layout_like_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart_grey_sm"
                    />
                <TextView
                    android:id="@+id/bottom_textView_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_layout_comments_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart_grey_sm"
                    />
                <TextView
                    android:id="@+id/bottom_textView_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/bottom_textView_lookup_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写点评"
                android:textColor="@android:color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:background="@drawable/selector_lookup_gooods_bg"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
