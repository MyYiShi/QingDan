<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/category_lookmore_right_scrollview_ll">

    <RelativeLayout
        android:id="@+id/category_lookmore_right_scrollview_ll_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/category_lookmore_right_listview_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="刀剪"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:paddingTop="13dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/category_lookmore_right_listview_image"
            android:layout_width="8dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/angle_right_grey"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <cn.lankton.flowlayout.FlowLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/allcategories_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineSpacing="15dp">
    </cn.lankton.flowlayout.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

</LinearLayout>